#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
#set -e

# debug
set -x

# clean up leaking environment
unset GIT_DIR

BUILD_DIR=$1
CACHE_DIR=$2

VERSION=0.91

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}
if [ ! -d "$CACHE_DIR/freetds-$VERSION" ]; then
  echo "-----> Downloading FreeTDS"
  mkdir -p $CACHE_DIR
  FREETDS_TAR=http://ibiblio.org/pub/Linux/ALPHA/freetds/stable/freetds-0.91.tar.gz
  curl $FREETDS_TAR -s -o - | tar xzf - -C $CACHE_DIR
fi

echo "-----> Vendoring FreeTDS into slug"
cp -r $CACHE_DIR/freetds-$VERSION $BUILD_DIR/freetds

cd $BUILD_DIR/freetds

echo "-----> Configure FreeTDS"
./configure --prefix=$BUILD_DIR | indent
echo "-----> Configure make"
make | indent
echo "-----> Configure Install FreeTDS"
make install | indent
